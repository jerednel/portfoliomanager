<h3>Creating new task for <%= @hotel.name %></h3>

<%= form_for @task do |f| %>
	<% if @task.errors.any? %>
	<div class="error messages">
	<h2>Form is invalid</h2>
	<ul>
		<% for message in @task.errors.full_messages %>
		<li><%= message %></li>
		<% end %>
	</ul>
	</div>
	<% end %>

<div class="field">
	<%= f.label :name %>
	<%= f.text_field :name %>
</div>
  <div class="field">
    
    <%= f.hidden_field :id, :value => @hotel.id %>
  </div>


<div class="actions"><%= f.submit %></div>
<% end %>