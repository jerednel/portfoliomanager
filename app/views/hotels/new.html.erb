<h1>Add Hotel</h1>

<%= form_for @hotel do |f| %>
	<% if @hotel.errors.any? %>
	<div class="error messages">
	<h2>Form is invalid</h2>
	<ul>
		<% for message in @hotel.errors.full_messages %>
		<li><%= message %></li>
		<% end %>
	</ul>
	</div>
	<% end %>

<div class="field">
	<%= f.label :inncode %>
	<%= f.text_field :inncode %>
</div>

<div class="field">
	<%= f.label :name %>
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :address %>
	<%= f.text_field :address %>
</div>
<div class="field">
	<%= f.label :city %>
	<%= f.text_field :city %>
</div>
<div class="field">
	<%= f.label :state %>
	<%= f.text_field :state %>
</div>
<div class="field">
	<%= f.label :global_web_url %>
	<%= f.text_field :global_web_url %>
</div>
<div class="field">
	<%= f.label :local_web_url %>
	<%= f.text_field :local_web_url %>
</div>
<div class="field">
	<%= f.label :facebook_url %>
	<%= f.text_field :facebook_url %>
</div>
<div class="field">
	<%= f.label :twitter_url %>
	<%= f.text_field :twitter_url %>
</div>

<div class="actions"><%= f.submit %></div>
<% end %>